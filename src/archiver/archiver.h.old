#pragma once

#include "../defs.h"
#include <chilkat/CkTar.h>

namespace boxer::archiver {
	
	static auto createTar() -> bool_t {
		CkTar tar;
		tar.put_WriteFormat("gnu");

		bool_t success = tar.AddDirRoot("/mnt/c/Repos/boxer/test-files");
		if (!success) {
			log_err(tar.lastErrorText())
			return false;
		}

		success = tar.WriteTar("BATTLE_SCARS.tar");

		if (!success) {
			log_err(tar.lastErrorText())
			return false;
		}

		log_dbg("Successfully created tar file.")
		return true;

	}
}

